number = 23
running = True

while running:
    guess = int(input('Введите целое число: '))

    if guess == number:
        print('Поздравляю, ты угадал')
        running = False
    elif guess < number:
        print('нет,загаданное число больше')
    else:
        print('нет, загаданное число меньше')
else:
    print('цилк закончен.')
print('завершение.')
